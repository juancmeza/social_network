<link rel="stylesheet" href="/stylesheets/posts.css" />

<div class="posts">
  <p>Edit Post of <%=@user.first_name%> <%=@user.last_name%>:</p>
  <form action="/posts/<%=@post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type='text' name='post_body' value='<%=@post.post_body%>'>
    <input type="submit" value="save">
  </form>
  <br><br>
  <form action="/posts/<%=@post.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="delete" >
    <h2 style="color:coral;"><button Onclick="return ConfirmDelete();" type="submit" name="actiondelete" value='DELETE'>Delete this post</button></h2>
      <script>
    function ConfirmDelete()
    {
      var x = confirm("Are you sure you want to delete?");
      if (x)
          return true;
      else
        return false;
    }
      </script> 
</div>

