<link rel="stylesheet" href="/stylesheets/posts.css" />

<div class="posts">
<p>Create New Post:</p>
<form action='/posts_page' method='post'>
  <input type="text" name="post_body" size="50" required>
  <input type="hidden" name="user_id" value="<%=@user.id%>">
  <input type="submit" value="post">
</form>
<br>
<h3>Old Posts:</h3>
<h3>________________________________________________________________________________________________</h3>
<br>
<%if @posts.size == 0%>
<p style="text-align:center"><%="You have no posts yet."%></p>
<%end%>
<%counter = 0%>
<%while counter < 7%>
<h3><%=@posts[counter].post_body%></h3>
<h6>posted by: <%=User.find(@posts[counter].user_id).username%> on <%=@posts[counter].when_posted %> </h6>
<%counter += 1%>
<br>
<%end%>
</div>

